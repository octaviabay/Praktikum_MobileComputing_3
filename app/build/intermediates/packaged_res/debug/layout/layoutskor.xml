<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/satupointA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="SATU POINT" />

    <Button
        android:id="@+id/duapointA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUA POINT"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/tigapointA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="280dp"
        android:text="TIGA POINT" />

    <TextView
        android:id="@+id/pointA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point Tim A"
        android:textSize="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/skorA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="180dp"/>

    <Button
        android:id="@+id/resetA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="120dp"
        android:text="RESET PERHITUNGAN" />

    <Button
        android:id="@+id/resetB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="120dp"
        android:text="RESET PERHITUNGAN" />

    <TextView
        android:id="@+id/skorB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="180dp"/>

    <TextView
        android:id="@+id/pointB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point Tim B"
        android:textSize="30dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="130dp"/>

    <Button
        android:id="@+id/satupointB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="10dp"
        android:text="SATU POINT" />

    <Button
        android:id="@+id/duapointB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUA POINT"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/tigapointB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="280dp"
        android:text="TIGA POINT"  />

</RelativeLayout>